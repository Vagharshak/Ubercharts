<web-app>

	<display-name>charting</display-name>

	 <!--  
	      There are three means to configure Wickets configuration mode and they are
	      tested in the order given. 
	      1) A system property: -Dwicket.configuration
	      2) servlet specific <init-param>
	      3) context specific <context-param>
	      The value might be either "development" (reloading when templates change)
	      or "deployment". If no configuration is found, "development" is the default.
	-->
    <filter>
        <filter-name>WicketApplication</filter-name>
       <!-- enable when update to wicket websockets 0.6 : -->
        <filter-class>org.apache.wicket.protocol.ws.jetty.Jetty7WebSocketFilter</filter-class>
        <init-param>
            <param-name>applicationClassName</param-name>
            <param-value>com.comsysto.insight.WicketApplication</param-value>
        </init-param>
        <init-param>
            <param-name>ignorePaths</param-name>
            <param-value>jmx/,rest/</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>WicketApplication</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
